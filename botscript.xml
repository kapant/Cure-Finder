<context>
    <input pattern = "/start">
        <output value = "Привет!"/>
        <context>
            <pattern name = "List" value = "$Text(,|и|.)"/>
            <input pattern = "* [меня] repeat($List) *">
                <var name = "Symptomes">
                    <script>
                        <![CDATA[
                            i = 0;
                            str = "[";
                            while ($List[i]) {
                                if (i != 0) {
                                    str += ',';
                                }
                                str += '"' + $List[i] + '"';
                                i++;
                            }
                            str += ']';
                            JSON.parse(str);
                        ]]>
                    </script>
                </var>
                <output>
                    <script>
                        <![CDATA[
                            i = 0;
                            str = "У Вас ";
                            while ($Symptomes[i]) {
                                str += $Symptomes[i];
                                if ($Symptomes[i + 1]) {
                                    str += ', ';
                                } else {
                                    str += '.';
                                }
                            }
                            str;
                        ]]>
                    </script>
                </output>
            </input>
        </context>
    </input>
</context>